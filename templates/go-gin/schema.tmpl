{{- if ne $property.MaxLength 0 }}{{ $needs_fmt = true }}{{- end }}
{{- if ne $property.Pattern "" }}{{ $needs_regexp = true }}{{- end }}
{{- end }}

{{ if $needs_fmt -}} import "fmt" {{- end }}
